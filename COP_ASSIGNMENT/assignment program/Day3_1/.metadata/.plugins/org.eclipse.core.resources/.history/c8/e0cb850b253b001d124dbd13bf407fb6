package Assing3;

public class abcdPatternwithSpace {

	public static void main(String[] args) {
	char r ='A';
	 int space=0;
		for( int i=1;i<=4;i++)
		{
			 r='A';
			for( int j=4;j>=i;j--)
			{	
				System.out.print(r);
			      r++;
		}
	for(int l=0;l<space;l++)
		System.out.println("");
		
	for( int j=4;j>=i;j--)
	{
		r--;
	System.out.println(r);
		}
		space=space+2;
		
System.out.println();
	}
	}
}
